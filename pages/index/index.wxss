/**index.wxss**/
.chatList {
    height: 100%;
    width: 100%;
    margin-bottom: 44px;
}

.queryArea {
    width: 99%;
    position: fixed;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.inputQuery {
    width: 75%;
    height: 44px;
    background-color: white;
    border-style: solid;
    border-width: 0.5px;
    border-radius: 4px;
    border-color: lightgray;
}

.recordButton {
    /* margin-left: 5px; */
    margin-right: 5px;
    width: 44px;
    height: 44px;
}

.recordImg {
    width: 100%;
    height: 100%;
}

.audioView {
    width: 100%;
    display: flex;
    align-content: center;
    justify-content: space-around;
    margin-bottom: 10px;
}

.audioButton {
    width: 95%;
}